<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XamFormsFirebaseAuth.Features.Shell.LoginShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XamFormsFirebaseAuth.Features.Shell"
    xmlns:login="clr-namespace:XamFormsFirebaseAuth.Features.Login"
    xmlns:mainShell="clr-namespace:PokemonDetector">

    <ShellContent ContentTemplate="{DataTemplate login:LoginPage}" Route="LoginPage" />

    <ShellContent ContentTemplate="{DataTemplate login:NewUserPage}" Route="NewUserPage" />

    <ShellContent ContentTemplate="{DataTemplate login:ForgotPasswordPage}" Route="ForgotPasswordPage" />

    <ShellContent ContentTemplate="{DataTemplate mainShell:MainShell}" Route="MainShell" />
</Shell>